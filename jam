#include <iostream>

using namespace std;

int main(int argc, char const *argv[])
{
    string str;
    cin >> str;

    if(str[7] == '9'){
        str[7] = '0';
        str[6]++;
        if(str[6] == '6'){
            str[6] = '0';
            str[4]++;
            if(str[4] == ':'){
                str[4] = '0';
                str[3]++;
                if(str[3] == '6'){
                    str[3] = '0';
                    str[1]++;
                    if(str[0] == '2' && str[1] == '4'){
                        str[0] = '0';
                        str[1] = '0';
                    }
                }
            }
        }
    }else{
        str[7]++;
    }
    cout << str;

    return 0;
}
